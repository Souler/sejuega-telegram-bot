{
  "extends": "ts-node/node16/tsconfig.json",

  "ts-node": {
    "transpileOnly": true,
  },

  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017"
  },

  "compileOnSave": true,
  "include": [
    "src"
  ]
}
